{
  "name": "yt-stamper",
  "version": "0.3.0",
  "description": "Easily create timestamps in YouTube videos.",
  "private": true,
  "type": "module",
  "license": "MIT",
  "scripts": {
    "dev": "bun run --bun concurrently \"npm:build:dev:*\"",
    "build:dev:js": "bun run cp:manifest && bun run cp:options && bun build --entrypoints ./src/contentScript/index.tsx ./src/background/index.ts ./src/options/index.tsx --root ./src --outdir ./out --entry-naming '[dir].[ext]' --watch",
    "build:dev:css": "tailwindcss -i ./src/index.css -o ./out/index.css --watch",
    "build": "bun scripts/build.ts",
    "cp:manifest": "cp ./src/manifest.json ./out/manifest.json",
    "cp:options": "cp ./src/options/index.html ./out/options.html",
    "clean": "rm -rf ./out",
    "storybook": "storybook dev"
  },
  "dependencies": {
    "@webcomponents/custom-elements": "^1.6.0",
    "clsx": "^2.1.0",
    "lucide-react": "^0.372.0",
    "nanoid": "^5.0.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.7.0",
    "@storybook/addon-essentials": "^8.0.8",
    "@storybook/react-vite": "^8.0.8",
    "@types/bun": "^1.1.0",
    "@types/chrome": "^0.0.266",
    "@types/react": "^18.2.79",
    "@types/react-dom": "^18.2.25",
    "concurrently": "^8.2.2",
    "prettier": "^3.2.5",
    "storybook": "^8.0.8",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.4.5"
  }
}
