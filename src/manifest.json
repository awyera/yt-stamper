{
  "manifest_version": 3,
  "name": "YTStamper",
  "version": "0.3.1",
  "description": "Easily create timestamps in YouTube videos.",
  "permissions": [
    "webNavigation",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "*://*.youtube.com/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "index.css"
      ],
      "matches": [
        "*://*.youtube.com/*"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/watch*"
      ],
      "js": [
        "contentScript.js"
      ],
      "run_at": "document_idle"
    }
  ]
}
